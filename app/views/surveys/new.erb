<form method="POST" action="/users/1/surveys">

  <div class="form-group row">
    <label for="inputSurveyTitle" class="col-sm-2 form-control-label">Survey Title</label>
    <div class="col-sm-10">
      <input type="text" value="<%= @survey.title if @survey %>" name="title" class="form-control" placeholder="e.g. Food Survey" required>
    </div>
  </div>

  <% if @survey %>
    <div class="form-group row">
      <label for="inputSurveyTitle" class="col-sm-2 form-control-label">Survey Question</label>
      <div class="col-sm-10">
        <input type="text" value="<%= @question.body if @question %>" name="body" class="form-control" placeholder="e.g. What is your favorite food?" required>
      </div>
    </div>
  <% end %>

  <% if @question %>
    <div class="form-group row">
      <label for="inputSurveyTitle" class="col-sm-2 form-control-label">Answer</label>
      <div class="col-sm-10">
        <input type="text" value="" name="choice" class="form-control" placeholder="e.g. Pizza" required>
      </div>
    </div>
  <% end %>

  <% if @choice_container %>
    <% @choice_container.each do |choice| %>

    <div class="form-group row">
      <label for="inputSurveyTitle" class="col-sm-2 form-control-label">Answer <%= @choice_container.find_index(choice) + 1 %></label>
      <div class="col-sm-10">
        <%= choice %>
      </div>
    </div>






    <% end %>
  <% end %>

  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-secondary">Sign in</button>
    </div>
  </div>
</form>







